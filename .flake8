[flake8]
exclude =
    # don't traverse git directory
    .git,
    # don't traverse cached files
    __pycache__,
    # don't traverse venv files
    bin,
    lib,
    share,
    local,
    # don't traverse autogenerated scripts
    migrations
max-line-length = 99

# Specify a list of codes to ignore.
ignore =
    E722, W503, E251, E501